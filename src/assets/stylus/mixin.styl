// 由于有一些低端机对border-image支持度不够友好，个人建议你使用background-image的这个方案。
@svg 1px-border
    height 2px
    @rect
        fill var(--color, black)
        width 100%
        height 50%
@svg square
    @rect
        fill var(--color, black)
        width 100%
        height 100%
// 默认基准font-size
$baseFontSize = 25rem
px2rem($px)
    ($px / $baseFontSize)
light-border($color)
    position relative
    &:after
        display block
        width 100%
        position absolute
        bottom 0
        left 0
        border-top 1rpx solid $color
        content ' '
bottom-border($color)
    position relative
    &:after
        display block
        width 100%
        position absolute
        bottom 0
        left 0
        border-bottom 1rpx solid $color
        content ' '
dashed-border($color)
    position relative
    &:after
        display block
        width 100%
        position absolute
        bottom 0
        left 0
        border-bottom 1rpx dashed $color
        content ' '
bg-image($url)
    background-image url($url + '@2x')
    background-repeat no-repeat
    @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
        background-image url($url + '@3x')
        background-repeat no-repeat
